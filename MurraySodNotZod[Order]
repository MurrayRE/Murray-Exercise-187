//#PURPOSE: This program compiles and organizes information for the order and sends it to the main program
//#PURPOSE: to be used in creating a final receipt for a user. 
//#STARTDATE: 4.21.2021

package edu.cpt187.murray.exercise6;

//START Supportive Class
public class Order 
{	
	//NOTE: These are attributes of our object - our Object = Order
	//declare and initialize class CONSTANTS
	//These constants must be REQUIRED by the object attributes
	private final double TAX_RATE = 0.075;


	//declare and initialize all non-CONSTANT class attributes 
	private int discountType = 0;
	private int itemID = 0;
	private String itemName = "";
	private double itemPrice = 0.0;
	private String discountName = "";
	private double discountRate = 0.0;
	private int howMany = 0;
	private int lastItemSelectedIndex = 0;
	private String prizeName = "";
	
	//The Order class constructor
	public Order()
	{
	//		N/A
	}//End of Order class constructor

	
	//This setter "Sets" the proper attribute to a new value.
	//NOTE: Setters are Void Methods - These do not return a value
	
	//SETTERS
	//START Last Item Selected
	public void setLastItemSelectedIndex(int borrowedSearchIndex)
	{
		lastItemSelectedIndex = borrowedSearchIndex;
	}//END Last Item Selected
	
	//START Item ID
	//This method will ASSIGN a new value to itemID
	public void setItemID(int[] borrowedItemIDs)
	{
		itemID = borrowedItemIDs[lastItemSelectedIndex];
	}//END Item IDs
	
	//START Item Name
	//This method will ASSIGN a new value to itemNames
	public void setItemName(String[] borrowedItemNames)
	{
		itemName = borrowedItemNames[lastItemSelectedIndex];
	}//END Item Name
	
	//START Item Price
	//This method will ASSIGN a new value to Item Price
	public void setItemPrice(double[] borrowedItemPrices)
	{
		//assigns itemPrize using itemSelection
		itemPrice = borrowedItemPrices[lastItemSelectedIndex];
	}//END Item Price
	
	//START How Many
	//This method will ASSIGN a new value to How Many
	public void setHowMany(String borrowedHowMany)
	{
		//Borrows a string 
		//<-- Note to self: I did this backwards the first time.
		howMany = Integer.parseInt(borrowedHowMany);
	}//END How Many
	
	//START Discount Type
	//This method will ASSIGN a new value to  Discount Type
	public void setDiscountType(char borrowedMenuSelection)
	{
		//assigns the calculated value of borrowedMenuSelection 
		//minus 'A' to discountType
		discountType = borrowedMenuSelection  - 'A';
	}//END Discount Type
	
	//START Discount Name
	//This method will ASSIGN a new value to Discount Name
	public void setDiscountName(String[] borrowedDiscountNames)
	{
		discountName = borrowedDiscountNames[discountType];
	}//END Discount Name
	
	//START Discount Rate
	//This method will ASSIGN a new value to Discount Name
	public void setDiscountRate(double[] borrowedDiscountRate)
	{
		//assign discountRate using discountType
		discountRate = borrowedDiscountRate[discountType];
	}//END Discount Rate
	
	//START Prize Name //TODO
	//This method will ASSIGN a new value to Prize Name
	public void setPrizeName(String[] borrowedPrizeNames, int borrowedPrizeIndex)
	{
		prizeName = borrowedPrizeNames[borrowedPrizeIndex];
	}//END Prize Name
	
	//START Decrease In Stock
	public void setDecreaseInStock(Inventory borrowedInventoryObject)
	{
		//Invokes borrowedInventoryObject.setReduceStock
		borrowedInventoryObject.setReduceStock(howMany, lastItemSelectedIndex);
	}//END Decrease In Stock
	
//NOTE: These will return a value
//GETTERS
	
	//START In Stock Count
	public int getInStockCount(int[] borrowedInStockCounts)
	{
		//uses borrowed array and lastItemSelectedIndex
		return borrowedInStockCounts[lastItemSelectedIndex];
	}//END In Stock Count
	
	//START Item ID
	//This method will RETURN the value of Item ID
	public int getItemID()
	{
		return itemID;
	}//END Item ID
	
	//START Item Name
	//This method will RETURN the value of Item Name
	public String getItemName() 
	{
		return itemName;
	}//END Item Name
	
	//START Item Price
	//This method will RETURN the value of Item Price
	public double getItemPrice()
	{
		return itemPrice;
	}//END  Item Price
	
	//START How Many
	//This method will RETURN the value of How Many
	public int getHowMany()
	{
		return howMany;
	}//END How Many
	
	///START Discount Name
	//This method will RETURN the value of Discount Name
	public String getDiscountName()
	{
		return discountName;
	}//END  Discount Name
	
	//START Discount Rate
	//This method will RETURN the value of  Discount Rate
	public double getDiscountRate()
	{
		return discountRate;
	}//END Discount Rate
	
	//START Discount Amount
	//This method will RETURN the value of Discount Amount
	public double getDiscountAmt()
	{
		return discountRate * itemPrice;
	}//END Discount Amount
	
	//START Discount Price
	//This method will RETURN the value of Discount Price
	public double getDiscountPrice()
	{
		return itemPrice - getDiscountAmt();
	}//END Discount Price
	
	//START Prize Name
	//This method will RETURN the value of Prize Name
	public String getPrizeName()
	{
		return prizeName;
	}//END Prize Name
	
	//START Sub Total
	//This method will RETURN the value of Sub Total
	public double getSubTotal()
	{
		return getDiscountPrice() * howMany;
	}//END Sub Total
	
	//START Tax Rate
	//This method will RETURN the value of Tax Rate
	public double getTaxRate()
	{
		return TAX_RATE;
	}//END Tax Rate
	
	//START Tax Amount
	
	//This method will RETURN the value of Tax Amount
	public double getTaxAmt()
	{
		return TAX_RATE * getSubTotal();
	}//END Tax Amount
	
	//START Total Cost
	//This method will RETURN the value of Total Cost
	public double getTotalCost()
	{
		return howMany * getSubTotal() + getTaxAmt();
	}//END Total Cost
}//END of Order Class
	
